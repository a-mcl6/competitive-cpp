{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Run main.cpp",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "/opt/homebrew/opt/llvm/bin/clang++ -std=c++20 -O2 -Wall main.cpp -o main && ./main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "detail": "Compile and run main.cpp in one step"
        }
    ]
}
